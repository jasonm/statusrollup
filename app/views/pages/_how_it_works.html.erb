<div id="how-it-works" class="carousel slide">
  <%
    steps = [
      'Sign in with GitHub and choose a project you maintain.',
      'Statuses get aggregated for all your pulls.',
      'Click through to StatusRollup to drill-down and see per-tool information.'
    ]
  %>
  <h2>Three easy steps:</h2>
  <div class="carousel-inner">
    <% steps.each_with_index do |step, index| %>
      <div class="item <%= 'active' if index == 0 %>">
        <%= image_tag "how-it-works/#{ index + 1}.png" %>
        <div class="carousel-caption">
          <h4>Step <%= index + 1%></h4>
          <p><%= step %></p>
        </div>
      </div>
    <% end %>
  </div>

  <a class="left carousel-control" href="#how-it-works" data-slide="prev">‹</a>
  <a class="right carousel-control" href="#how-it-works" data-slide="next">›</a>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    //<![CDATA[
      $(function() {
        $('.carousel').carousel({
          interval: 5000
        });
      });
    //]]>
  </script>
<% end %>
